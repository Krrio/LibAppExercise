@model LibApp.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.MembershipType.Name)</dt>
            <dd>@Model.MembershipType.Name</dd>

            @if (Model.Birthdate.HasValue)
            {
                <dt>@Html.DisplayNameFor(model => model.Birthdate)</dt>
                <dd>@Model.Birthdate.Value.ToString("d")</dd>
            }
        </dl>
    </div>
</div>

@if (User.IsInRole("CanEditCustomers"))
{
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
}

<div>
    <a class="btn btn-default" asp-action="Index">Back to list</a>
</div>
